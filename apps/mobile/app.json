{
  "expo": {
    "name": "Insight",
    "slug": "insight-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "insight",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0B1020"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.insight.mobile",
      "infoPlist": {
        "NSCameraUsageDescription": "Allow Insight to capture images for event logs.",
        "NSMicrophoneUsageDescription": "Allow Insight to record audio notes and voice capture.",
        "NSPhotoLibraryUsageDescription": "Allow Insight to attach photos to logs.",
        "NSLocationWhenInUseUsageDescription": "Allow Insight to attach your location to events.",
        "NSSupportsLiveActivities": true,
        "ITSAppUsesNonExemptEncryption": false,
        "UIAccessibilityTraitAdjustable": true
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#0B1020"
      },
      "permissions": [
        "CAMERA",
        "RECORD_AUDIO",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "READ_MEDIA_IMAGES",
        "VIBRATE"
      ],
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-haptics"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "insight-mobile-production"
      }
    },
    "owner": "insight"
  }
}
